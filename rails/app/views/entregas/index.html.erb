<p id="notice"><%= notice %></p>

<h1>Entregas</h1>

<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Vecino</th>
      <th>Estado</th>
      <th>Peso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entregas.each do |entrega| %>
      <tr>
        <td><%= entrega.vecino %></td>
        <td><%= entrega.estado %></td>
        <td><%= entrega.peso %></td>
        <td><%= link_to 'Show', entrega %></td>
        <td><%= link_to 'Edit', edit_entrega_path(entrega) %></td>
        <td><%= link_to 'Destroy', entrega, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

